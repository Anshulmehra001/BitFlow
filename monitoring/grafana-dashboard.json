{
  "dashboard": {
    "id": null,
    "title": "BitFlow Production Dashboard",
    "tags": ["bitflow", "starknet", "bitcoin"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "API Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"bitflow-api\"}[5m])",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Active Streams",
        "type": "stat",
        "targets": [
          {
            "expr": "active_streams_total",
            "legendFormat": "Active Streams"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Stream Creation Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(stream_creations_total[5m])",
            "legendFormat": "Streams Created/sec"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Total Volume Streamed (BTC)",
        "type": "stat",
        "targets": [
          {
            "expr": "total_btc_volume_streamed",
            "legendFormat": "BTC Volume"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Bridge Transaction Status",
        "type": "piechart",
        "targets": [
          {
            "expr": "bridge_transactions_by_status",
            "legendFormat": "{{status}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "Yield Generated (24h)",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(total_yield_generated[24h])",
            "legendFormat": "Yield Generated"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      },
      {
        "id": 7,
        "title": "System Resource Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "100 - (avg(irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU Usage %"
          },
          {
            "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100",
            "legendFormat": "Memory Usage %"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 24
        }
      },
      {
        "id": 8,
        "title": "Error Rates",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"bitflow-api\",status=~\"5..\"}[5m])",
            "legendFormat": "5xx Errors"
          },
          {
            "expr": "rate(stream_creation_failures_total[5m])",
            "legendFormat": "Stream Failures"
          },
          {
            "expr": "rate(bridge_transaction_failures_total[5m])",
            "legendFormat": "Bridge Failures"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 32
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}