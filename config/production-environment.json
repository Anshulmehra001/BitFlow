{
  "environment": "production",
  "version": "1.0.0",
  "deployment": {
    "region": "us-east-1",
    "availabilityZones": ["us-east-1a", "us-east-1b", "us-east-1c"],
    "multiRegion": {
      "enabled": true,
      "regions": ["us-east-1", "eu-west-1", "ap-southeast-1"],
      "failoverStrategy": "automatic",
      "dataReplication": "async"
    }
  },
  "infrastructure": {
    "containerOrchestration": "kubernetes",
    "loadBalancer": {
      "type": "application",
      "healthCheck": {
        "path": "/health",
        "intervalSeconds": 30,
        "timeoutSeconds": 5,
        "healthyThreshold": 2,
        "unhealthyThreshold": 3
      },
      "sslTermination": true,
      "stickySession": false
    },
    "autoscaling": {
      "enabled": true,
      "minInstances": 3,
      "maxInstances": 50,
      "targetCpuUtilization": 70,
      "targetMemoryUtilization": 80,
      "scaleUpCooldown": 300,
      "scaleDownCooldown": 600
    },
    "networking": {
      "vpc": {
        "cidr": "10.0.0.0/16",
        "subnets": {
          "public": ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"],
          "private": ["10.0.10.0/24", "10.0.20.0/24", "10.0.30.0/24"],
          "database": ["10.0.100.0/24", "10.0.200.0/24", "10.0.300.0/24"]
        }
      },
      "cdn": {
        "enabled": true,
        "provider": "cloudflare",
        "caching": {
          "staticAssets": "1y",
          "apiResponses": "5m",
          "dynamicContent": "no-cache"
        }
      }
    }
  },
  "database": {
    "primary": {
      "engine": "postgresql",
      "version": "15.4",
      "instanceClass": "db.r6g.xlarge",
      "multiAz": true,
      "backupRetention": 30,
      "encryption": true,
      "performanceInsights": true
    },
    "readReplicas": {
      "count": 2,
      "instanceClass": "db.r6g.large",
      "regions": ["us-east-1", "eu-west-1"]
    },
    "connectionPooling": {
      "enabled": true,
      "maxConnections": 100,
      "minConnections": 10,
      "idleTimeout": 300
    }
  },
  "cache": {
    "redis": {
      "engine": "redis",
      "version": "7.0",
      "nodeType": "cache.r6g.large",
      "numCacheNodes": 3,
      "clustering": true,
      "encryption": {
        "atRest": true,
        "inTransit": true
      }
    },
    "policies": {
      "streamData": {
        "ttl": 3600,
        "evictionPolicy": "allkeys-lru"
      },
      "userSessions": {
        "ttl": 86400,
        "evictionPolicy": "volatile-ttl"
      },
      "apiResponses": {
        "ttl": 300,
        "evictionPolicy": "allkeys-lfu"
      }
    }
  },
  "security": {
    "encryption": {
      "atRest": {
        "enabled": true,
        "algorithm": "AES-256",
        "keyManagement": "aws-kms"
      },
      "inTransit": {
        "enabled": true,
        "tlsVersion": "1.3",
        "certificateProvider": "letsencrypt"
      }
    },
    "secrets": {
      "provider": "aws-secrets-manager",
      "rotation": {
        "enabled": true,
        "interval": 90
      },
      "encryption": true
    },
    "compliance": {
      "standards": ["SOC2", "PCI-DSS", "GDPR"],
      "auditing": {
        "enabled": true,
        "retention": 2555,
        "immutable": true
      }
    }
  },
  "monitoring": {
    "metrics": {
      "provider": "prometheus",
      "retention": "90d",
      "scrapeInterval": "30s"
    },
    "logging": {
      "provider": "elasticsearch",
      "retention": "90d",
      "structured": true,
      "level": "info"
    },
    "tracing": {
      "provider": "jaeger",
      "samplingRate": 0.1,
      "retention": "7d"
    },
    "alerting": {
      "provider": "alertmanager",
      "channels": ["slack", "pagerduty", "email"],
      "escalation": true
    }
  },
  "backup": {
    "database": {
      "frequency": "daily",
      "retention": 30,
      "crossRegion": true,
      "encryption": true,
      "testing": {
        "frequency": "weekly",
        "automated": true
      }
    },
    "application": {
      "frequency": "hourly",
      "retention": 7,
      "incremental": true
    }
  },
  "disaster_recovery": {
    "rto": 3600,
    "rpo": 900,
    "strategy": "pilot-light",
    "testing": {
      "frequency": "quarterly",
      "automated": false,
      "documentation": true
    }
  },
  "performance": {
    "targets": {
      "apiResponseTime": {
        "p50": 200,
        "p95": 500,
        "p99": 1000
      },
      "throughput": {
        "requestsPerSecond": 10000,
        "transactionsPerSecond": 1000
      },
      "availability": 99.9
    },
    "optimization": {
      "caching": true,
      "compression": true,
      "minification": true,
      "imageOptimization": true
    }
  },
  "cost_optimization": {
    "reservedInstances": {
      "enabled": true,
      "coverage": 80
    },
    "spotInstances": {
      "enabled": true,
      "percentage": 30
    },
    "rightsizing": {
      "enabled": true,
      "frequency": "monthly"
    }
  }
}