# BitFlow Staging Environment Configuration

# Network Configuration
STARKNET_NETWORK=testnet
STARKNET_RPC_URL=https://starknet-testnet.public.blastapi.io
STARKNET_ACCOUNT_FILE=~/.starkli/account
STARKNET_KEYSTORE_FILE=~/.starkli/keystore

# Contract Addresses (Updated after deployment)
ESCROW_MANAGER_ADDRESS=
ATOMIQ_BRIDGE_ADAPTER_ADDRESS=
YIELD_MANAGER_ADDRESS=
STREAM_MANAGER_ADDRESS=
SUBSCRIPTION_MANAGER_ADDRESS=
MICRO_PAYMENT_MANAGER_ADDRESS=
SYSTEM_MONITOR_ADDRESS=

# External Service Configuration
ATOMIQ_BRIDGE_API_URL=https://testnet-api.atomiq.exchange
ATOMIQ_BRIDGE_API_KEY=
VESU_PROTOCOL_ADDRESS=
TROVES_PROTOCOL_ADDRESS=

# API Configuration
API_PORT=3001
API_HOST=0.0.0.0
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=1000
JWT_SECRET=staging_jwt_secret_change_in_production
CORS_ORIGIN=https://staging.bitflow.app

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/bitflow_staging
REDIS_URL=redis://localhost:6379/1

# Monitoring and Logging
LOG_LEVEL=debug
SENTRY_DSN=
DATADOG_API_KEY=
PROMETHEUS_PORT=9091

# Security Configuration
WEBHOOK_SECRET=staging_webhook_secret
API_KEY_ENCRYPTION_KEY=staging_encryption_key
SESSION_SECRET=staging_session_secret

# Feature Flags
ENABLE_YIELD_GENERATION=true
ENABLE_MICRO_PAYMENTS=true
ENABLE_SUBSCRIPTIONS=true
ENABLE_CROSS_CHAIN_BRIDGE=true

# Performance Configuration
MAX_CONCURRENT_STREAMS=1000
STREAM_UPDATE_INTERVAL_MS=1000
YIELD_CALCULATION_INTERVAL_MS=60000

# Backup and Recovery
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=12
BACKUP_RETENTION_DAYS=7